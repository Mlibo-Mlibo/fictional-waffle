<%- include('partials/header') %>
<div class="contact-section">
    <div class="hero mb-5">
        <h1>Get in Touch</h1>
        <p>We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
    </div>

    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-12">
                <div class="card shadow-sm mb-5">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">About KISSI</h2>
                        <p class="lead text-center">KISSI (Knowledge, Innovation, Skills, Service Integration) is our commitment to delivering excellence through:</p>
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="text-center mb-4">
                                    <i class="bi bi-lightbulb display-4 text-primary"></i>
                                    <h5 class="mt-3">Knowledge</h5>
                                    <p>Sharing expertise and insights</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center mb-4">
                                    <i class="bi bi-gear display-4 text-primary"></i>
                                    <h5 class="mt-3">Innovation</h5>
                                    <p>Driving creative solutions</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center mb-4">
                                    <i class="bi bi-trophy display-4 text-primary"></i>
                                    <h5 class="mt-3">Skills</h5>
                                    <p>Developing capabilities</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center mb-4">
                                    <i class="bi bi-puzzle display-4 text-primary"></i>
                                    <h5 class="mt-3">Service Integration</h5>
                                    <p>Seamless experiences</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-5">
                        <form action="/contact" method="POST" class="contact-form">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="form-label">First Name</label>
                                    <input type="text" name="firstName" class="form-control" required>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" name="lastName" class="form-control" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Email Address</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Phone Number (Optional)</label>
                                <input type="tel" name="phone" class="form-control">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Subject</label>
                                <select name="subject" class="form-select" required>
                                    <option value="">Choose a subject...</option>
                                    <option value="general">General Inquiry</option>
                                    <option value="event">Event Related</option>
                                    <option value="volunteer">Volunteering</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Message</label>
                                <textarea name="message" class="form-control" rows="5" required></textarea>
                            </div>
                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="newsletter" name="newsletter">
                                    <label class="form-check-label" for="newsletter">Subscribe to our newsletter</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5 g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-geo-alt display-5 text-primary mb-3"></i>
                    <h5>Visit Us</h5>
                    <p class="text-muted">123 Community Street<br>Pretoria, 0001</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-envelope display-5 text-primary mb-3"></i>
                    <h5>Email Us</h5>
                    <p class="text-muted">info@communityportal.com<br>support@communityportal.com</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-telephone display-5 text-primary mb-3"></i>
                    <h5>Call Us</h5>
                    <p class="text-muted">+27 12 345 6789<br>Mon-Fri, 9am-5pm</p>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
